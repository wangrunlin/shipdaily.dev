  function createActivityCard(activity: any) {
    return `
      <div class="relative">
        <!-- Timeline dot -->
        <div class="absolute left-0 top-6 w-3 h-3 bg-gray-900 rounded-full border-2 border-white shadow-sm"></div>
        
        <!-- Activity card -->
        <div class="ml-8 bg-white rounded-xl border border-gray-200 p-6 hover:shadow-md transition-shadow duration-300">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-3">
              <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-lg text-sm font-medium">
                ${activity.day}
              </span>
              <span class="text-gray-500 text-sm">${activity.date}</span>
            </div>
            <div class="flex items-center space-x-4 text-sm text-gray-500">
              <span>📝 ${activity.commits} 次提交</span>
              <span>⏰ ${activity.timeSpent}</span>
            </div>
          </div>
          
          <div class="text-gray-700 whitespace-pre-line leading-relaxed text-sm">
            ${activity.content}
          </div>
          
          <div class="flex items-center space-x-4 mt-4 pt-4 border-t border-gray-100">
            <button class="flex items-center space-x-1 text-gray-500 hover:text-gray-700 transition-colors">
              <span>❤️</span>
              <span class="text-sm">${Math.floor(Math.random() * 20) + 5}</span>
            </button>
            <button class="flex items-center space-x-1 text-gray-500 hover:text-gray-700 transition-colors">
              <span>🔁</span>
              <span class="text-sm">${Math.floor(Math.random() * 8) + 2}</span>
            </button>
            <button class="text-sm text-gray-500 hover:text-gray-700 transition-colors">
              查看详情
            </button>
          </div>
        </div>
      </div>
    `;
  }

  function loadMyActivities() {
    const timeline = document.getElementById('my-activity-timeline');
    if (!timeline) return;

    // Add timeline line
    timeline.innerHTML = `
      <div class="absolute left-2 top-8 bottom-8 w-0.5 bg-gray-200"></div>
      ${myActivities.map(createActivityCard).join('')}
    `;
  }

  async function loadMyStats() {
    try {
      const response = await fetch('/api/stats');
      const stats = await response.json();
      
      if (response.ok) {
        // Update header stats
        const streakEl = document.getElementById('my-streak');
        const totalEl = document.getElementById('my-total');
        
        if (streakEl) streakEl.textContent = stats.streakCount.toString();
        if (totalEl) totalEl.textContent = stats.totalCount.toString();
      }
    } catch (error) {
      console.error('Failed to load stats:', error);
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    loadMyActivities();
    loadMyStats();
  });
</script>

